@model UserManagement.Web.Models.Users.UserViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Users" asp-action="List">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Id</li>
    </ol>
</nav>

<h2 class="mb-5">Editing User with ID @Model.Id</h2>

<form id="EditDetails" name="EditDetails" autocomplete="off">

    <div class="row">

        <div class="form-group col-12 col-sm-6 col-md-3 mb-3">
            <label for="UserID" class="form-label">ID</label>
            <input type="text" class="form-control" id="UserID" name="UserID" readonly value="@Model.Id">
        </div>

        <div class="form-group col-12 col-sm-6 col-md-3 mb-3">
            <label for="UserActive" class="form-label">Active</label>
            <input type="checkbox" class="form-check-input form-control custom-checkbox" id="UserActive" name="UserActive" checked="@Model.IsActive" style="margin-top:0px;height:38px;width:100%">
        </div>

        <div class="form-group col-12 col-md-6 mb-3">
            <label for="EmailAddress" class="form-label">Email Address</label>
            <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" value="@Model.Email">
        </div>

        <div class="form-group col-12 col-sm-5 mb-3">
            <label for="Forename" class="form-label">Forename</label>
            <input type="text" class="form-control" id="Forename" name="Forename" value="@Model.Forename">
        </div>

        <div class="form-group col-12 col-sm-5 mb-3">
            <label for="Surname" class="form-label">Surname</label>
            <input type="text" class="form-control" id="Surname" name="Surname" value="@Model.Surname">
        </div>

    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>

</form>
